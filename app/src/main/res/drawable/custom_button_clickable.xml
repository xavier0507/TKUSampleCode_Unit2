<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid android:color="@color/custom_clickable_button_clicked_color"/>

			<stroke android:width="@dimen/custom_clickable_button_stroke" android:color="@color/general_black"/>

			<corners android:radius="@dimen/custom_button_corners"/>

			<padding android:bottom="@dimen/custom_button_padding"
					 android:left="@dimen/custom_button_padding"
					 android:right="@dimen/custom_button_padding"
					 android:top="@dimen/custom_button_padding"/>
		</shape>
	</item>

	<item>
		<shape>
			<solid android:color="@color/custom_clickable_button_original_color"/>

			<stroke android:width="@dimen/custom_clickable_button_stroke" android:color="@color/general_black"/>

			<corners android:radius="@dimen/custom_button_corners"/>

			<padding android:bottom="@dimen/custom_button_padding"
					 android:left="@dimen/custom_button_padding"
					 android:right="@dimen/custom_button_padding"
					 android:top="@dimen/custom_button_padding"/>
		</shape>
	</item>
</selector>